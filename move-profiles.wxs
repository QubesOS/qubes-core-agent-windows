<?xml version='1.0' encoding='windows-1252'?>
<Wix xmlns='http://schemas.microsoft.com/wix/2006/wi'>
    <?if $(env.DDK_ARCH) = x64 ?>
    <?define PFILESDIR = ProgramFiles64Folder ?>
    <?define SYSDIR = System64Folder ?>
    <?else?>
    <?define PFILESDIR = ProgramFilesFolder ?>
    <?define SYSDIR = SystemFolder ?>
    <?endif ?>
    <Fragment>
        <DirectoryRef Id='BinDir'>
            <Component Id='PrepareVolume'
                       Guid='{220A22F3-0B73-4A4C-B825-53132A88D1DF}'>
                       
                <File Id='prepare_volume.exe'
                      Source='$(env.QUBES_BIN)\prepare-volume.exe'
                      KeyPath='yes' />
            </Component>
        </DirectoryRef>
        <DirectoryRef Id='$(var.SYSDIR)'>
            <Component Id='RelocateDir'
                       Guid='{C4325378-B946-4C6C-A685-F3E39A10AF20}'>
                       
                <File Id='relocate_dir.exe'
                      Source='$(env.QUBES_BIN)\relocate-dir.exe'
                      KeyPath='yes' />
            </Component>
        </DirectoryRef>
        <CustomAction Id='RunPrepareVolume'
                      Return='ignore'
                      Impersonate='no'
                      Execute='deferred'
                      FileKey='prepare_volume.exe'
                      ExeCommand='51728' />
        <InstallExecuteSequence>
            <Custom Action='RunPrepareVolume'
                    Before='InstallFinalize'>$PrepareVolume=3 AND
                    NOT Installed AND NOT REMOVE</Custom>
        </InstallExecuteSequence>
    </Fragment>
</Wix>
